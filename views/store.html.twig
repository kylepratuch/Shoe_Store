<html>
<head>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    <title>{{ store.getStoreName }}</title>
</head>
<body>
    <div class = 'container'>
        <h1><em>{{ store.getStoreName }}</em></h1>

        <h3>{{ store.getStoreName }} carries these brands:</h3>
            {% if brands is not empty %}
                <ul>
                    {% for brand in brands %}
                        <li>{{ brand.getBrandName }}</li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>No brands yet!</p>
            {% endif %}

            <br>

        <h4>Add a brand to this store:</h4>

        <form action='/add_brands' method='post'>
            <input id='store_id' name='store_id' type='hidden' value='{{ store.getId }}'>
            <label for='brand_id' name='brand_id' type='text'>Select a brand:</label>
            <select id='brand_id' name='brand_id' type='text'>
                {% for brand in all_brands %}
                    <option value='{{ brand.getId }}'> {{ brand.getBrandName }} </option>
                {% endfor %}
            </select>
            <button type='submit' class='btn btn-success'>Add</button>
        </form>

        <br>

        <h4>Edit this store:</h4>

        <form action='/store/{{ store.getId }}/edit' method='post'>
            <input name='_method' type='hidden' value='patch'>
            <label for='new_store_name'>Rename this store:</label>
            <input id='new_store_name' name='new_store_name' type='text'>
            <button type='submit' class='btn btn-info'>Update</button>
        </form>

        <form action='/store/{{ store.getId }}/edit' method='post'>
            <input name='_method' type='hidden' value='delete'>
            <button type='submit' class='btn btn-danger'>Delete Store</button>
        </form>

        <p><a href='/'>Home</a></p>
    </div>
</body>
</html>
